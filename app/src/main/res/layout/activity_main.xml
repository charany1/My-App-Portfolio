<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#87ceeb">

    <TextView android:text="@string/title" android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/title_id" />

    <Button
        android:layout_below="@+id/title_id"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerHorizontal="true"
        android:text="SPOTIFY STREAMER"
        android:background="#F08C35"
        android:id="@+id/first_button"
        android:layout_margin="10dp"
        android:onClick="onClick"

     />
    <Button
        android:layout_below="@+id/first_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerHorizontal="true"
        android:text="SCORES APP"
        android:background="#F08C35"
        android:id="@+id/second_button"
        android:layout_margin="10dp"
        android:onClick="onClick"

        />
    <Button
        android:layout_below="@+id/second_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerHorizontal="true"
        android:text="LIBRARY APP"
        android:background="#F08C35"
        android:id="@+id/third_button"
        android:layout_margin="10dp"
        android:onClick="onClick"

        />
    <Button
        android:layout_below="@+id/third_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerHorizontal="true"
        android:text="BUILD IT BIGGER"
        android:background="#F08C35"
        android:id="@+id/fourth_button"
        android:layout_margin="10dp"
        android:onClick="onClick"
        />
    <Button
        android:layout_below="@+id/fourth_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerHorizontal="true"
        android:text="XYZ READER"
        android:background="#F08C35"
        android:id="@+id/fifith_button"
        android:layout_margin="10dp"
        android:onClick="onClick"

        />
    <Button
        android:layout_below="@+id/fifith_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerHorizontal="true"
        android:text="CAPSTONE:MY OWN APP"
        android:background="#E91E63"
        android:id="@+id/sixth_button"
        android:layout_margin="10dp"
        android:onClick="onClick"

        />


</RelativeLayout>
